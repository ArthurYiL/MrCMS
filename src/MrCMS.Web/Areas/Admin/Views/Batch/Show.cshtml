@model MrCMS.Batching.Entities.Batch

<fieldset data-batch-id="@Model.Id" data-refresh-url="@Url.Action("ShowPartial", "Batch", new {Model.Id})">
    <admin-header>
        <row>
            <admin-header-title title="@Html.Resource("admin-batch-batch-title", "Batch") #@Model.Id"/>

            <admin-header-actions>
                @Html.ActionLink("Back to list", "Index", "Batch", new {}, new {@class = "btn btn-secondary"})
            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>
            <h3>
                Runs
            </h3>

            <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>
                        Created On
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Completion
                    </th>
                    <th>
                        Execution Time
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var run in Model.BatchRuns.OrderByDescending(run => run.Id))
                {
                    <partial name="~/Areas/Admin/Views/BatchRun/Row.cshtml" model="run"/>
                }
                </tbody>
            </table>

        </card-body>
    </card>

</fieldset>