@model MrCMS.Entities.People.Role
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Add", "Role", FormMethod.Post))
{
    <fieldset>
        <legend>
            @Html.Resource("Admin User Roles Add", "Add Role")
            <span class="btn-group d-inline pull-right">
                <input type="submit" class="btn-primary btn" value="@Html.Resource("Save")" />
            </span>
        </legend>
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new{@class="form-control"})
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </fieldset>
}