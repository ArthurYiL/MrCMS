@using MrCMS.Helpers
@model MrCMS.Models.PageWidgetSortModel
@{
    ViewBag.Title = "Sort Webpage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";

    var action = Model.WebpageId > 0 ? "SortWidgetsForPage" : "SortWidgetsAction";

}
@{Html.IncludeScript("~/Areas/Admin/scripts/sort.js");}

@using (Html.BeginForm(action, "LayoutArea", FormMethod.Post, new { id = "edit-sort" }))
{

    @Html.Hidden("returnUrl", ViewData["returnUrl"])
    @Html.Hidden("LayoutAreaId", Model.LayoutAreaId)
    <fieldset>
        <legend>
            @Html.Resource("Admin Sort Widgets Title", "Sort Widgets")
        <span class="btn-group pull-right">
            <button class="btn btn-primary">@Html.Resource("Save")</button>
            </span>
        </legend>

        <ul id="sortable" class="list-group mb-3">
            @for (int i = 0; i < Model.Widgets.Count; i++)
            {
                var widget = Model.Widgets[i];
                <li class="list-group-item">
                    @Html.HiddenFor(model => model.Widgets[i].Id)
                    @Html.HiddenFor(model => model.Widgets[i].Order)
                    <i class="fa fa-arrows-alt"></i>&nbsp;&nbsp;
                    @widget.Name
                </li>
            }
        </ul>
    </fieldset>
}
@Html.InfoBlock(Html.Resource("Heads up") + "!", Html.Resource("Admin Widgets Sort info", "Drag items in to the order you would like then click save."))
