@using MrCMS.Helpers
@using MrCMS.Web.Apps.Admin.Helpers
@using MrCMS.Web.Apps.Admin.Services
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@model MrCMS.Entities.Documents.DocumentVersion
@inject  IDocumentVersionsAdminService AdminService
<fieldset>
    <legend>
        @Html.Resource("Admin Webpage Version", "Version") @Model.Id
        @if (await AdminService.AnyDifferencesFromCurrent(Model))
        {
            using (Html.BeginForm("Revert", "Versions", new { id = Model.Id }, FormMethod.Post))
            {
                <span class="btn-group d-inline pull-right">
                    <input type="submit" class="btn btn-primary" value="Revert to version" />
                </span>
            }
        }
    </legend>
    @Html.Resource("Admin Webpage Version Edited By", "Edited by") @(Model.User == null ? @Html.Raw("System") : Html.ActionLink(Model.User.Email, "Edit", "User", new { id = Model.User.Id }, null)) on @Model.CreatedOn
    <table class="table table-bordered" id="changes-table">
        <thead>
            <tr>
                <th>
                    @Html.Resource("Property")
                </th>
                <th>
                    @Html.Resource("Previous")
                </th>
                <th>
                    @Html.Resource("Current")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var change in await AdminService.GetComparisonToCurrent(Model))
            {
                <tr class="table-@(change.AnyChange ? "danger" : "success")">
                    <td>
                        @change.Property
                    </td>
                    <td>
                        @Html.RenderValue(change.PreviousValue)
                    </td>
                    <td>
                        @Html.RenderValue(change.CurrentValue)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</fieldset>
