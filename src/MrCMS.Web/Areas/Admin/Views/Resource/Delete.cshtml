@using MrCMS.Helpers
@model MrCMS.Entities.Resources.StringResource
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}

@using (Html.BeginForm("Delete", "Resource", new { Model.Id }, FormMethod.Post))
{
    @Html.ReturnToReferrer()
    <fieldset>
        <legend>
            @Html.Resource("Admin Resources Delete Override", "Delete resource")
        <span class="btn-group d-inline pull-right">
            <input type="submit" class="btn-primary btn" value="@Html.Resource("Delete")" />
        </span>
    </legend>
    @Html.InfoBlock(Html.Resource("Heads up") + "!", Html.Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
</fieldset>
}