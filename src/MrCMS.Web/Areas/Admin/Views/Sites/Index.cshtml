@model System.Collections.Generic.List<MrCMS.Entities.Multisite.Site>
@{
    ViewBag.Title = "Sites";
}



<admin-header>
    <row>
        <admin-header-title title="@Html.Resource("admin-multi-site-setup", "Multi-site Setup") "/>

        <admin-header-actions>
            @Html.ActionLink("Add", "Add", "Sites", null, new {@class = "btn btn-primary"})
        </admin-header-actions>
    </row>
</admin-header>

<card>
    <card-body>
        <table class="table table-striped table-condensed">
            <tr>
                <th>
                    @Html.Resource("admin-name","Name")
                </th>
                <th>
                    Url
                </th>
                <th>
                    @Html.Resource("admin-createdon","Created On")
                </th>
                <th>
                    @Html.Resource("admin-actions", "Actions")
                </th>
            </tr>
            @foreach (var site in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(site.Name, "Edit", new {id = site.Id})
                    </td>
                    <td>
                        @site.BaseUrl
                    </td>
                    <td>
                        @site.CreatedOn
                    </td>
                    <td>
                        @Html.ActionLink(Html.Resource("admin-delete", "Delete"), "Delete", new {id = site.Id}, new {@class = "btn btn-danger btn-sm", data_toggle = "fb-modal"})
                    </td>
                </tr>
            }
        </table>

    </card-body>
</card>