@model MrCMS.Entities.Messaging.QueuedMessage


<admin-header>
    <row>
        <admin-header-title title="@Html.Resource("Message") #@Model.Id"/>

        <admin-header-actions>
            <a asp-action="Index" class = "btn btn-primary">@Html.Resource("Back")</a>
        </admin-header-actions>
    </row>
</admin-header>

<card>
    <card-body>

        <table class="table table-striped table-condensed">
            <tbody>
            <tr>
                <td>
                    @Html.Resource("From")
                </td>
                <td>
                    @Model.FromDescription
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Resource("Message")To
                </td>
                <td>
                    @Model.ToDescription
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Resource("Cc")
                </td>
                <td>
                    @Model.Cc
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Resource("Bcc")
                </td>
                <td>
                    @Model.Bcc
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Resource("Subject")
                </td>
                <td>
                    @Model.Subject
                </td>
            </tr>
            @*<tr>
                <td>
                    @Html.Resource("Body")
                </td>
                <td>
                    @Html.Raw(Model.Body)
                </td>
            </tr>*@
            <tr>
                <td>
                    @Html.Resource("Created On")
                </td>
                <td>
                    @Model.CreatedOn.ToString()
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Resource("Sent On")
                </td>
                <td>
                    @Model.SentOnDescription
                </td>
            </tr>
            </tbody>
        </table>
        
        <h2 class="mt-2">Body</h2>

        <iframe src="@Url.Content("/Admin/MessageQueue/GetBody/" + Model.Id)" style="width:100%; height:400px" frameborder="0"></iframe>

    </card-body>
</card>