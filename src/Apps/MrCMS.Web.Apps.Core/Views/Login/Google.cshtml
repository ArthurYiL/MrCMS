@using MrCMS.Services.Resources
@model Microsoft.AspNetCore.Authentication.AuthenticationScheme
@{var returnUrl = ViewData["returnUrl"] as string;}
@using (Html.BeginForm("Login", "ExternalLogin", new { ReturnUrl = returnUrl }))
{
    <button type="submit" class="zocial googleplus" id="@Model.Name" name="provider" value="@Model.Name" title="Log in using your @Model.DisplayName account">@Html.Resource("Login with") @Model.DisplayName</button>
}
